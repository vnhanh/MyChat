<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_normal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/tv_chatter_name"
        android:textSize="@dimen/textSize_lb_normal"
        android:textColor="@color/primaryText"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_normal"
        app:layout_constraintStart_toEndOf="@id/img_icon"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_message_content"
        android:textColor="@color/secondaryText"
        app:layout_constraintStart_toStartOf="@id/tv_chatter_name"
        app:layout_constraintEnd_toStartOf="@id/img_check"
        app:layout_constraintTop_toBottomOf="@+id/tv_chatter_name"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/textSize_lb_normal"
        app:layout_constraintTop_toTopOf="@+id/tv_chatter_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chatter_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_message_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_message_content"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</android.support.constraint.ConstraintLayout>