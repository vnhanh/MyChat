<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bgInput" />
            <stroke android:color="@color/bgInput" />

            <corners android:radius="@dimen/corner_large" />

        </shape>
    </item>

    <item android:bottom="2dp">

        <shape
            android:shape="rectangle">

            <corners android:radius="@dimen/corner_normal" />

            <stroke
                android:color="@color/bgInput"
                android:width="1dp" />

            <solid android:color="@color/bgInput" />

        </shape>

    </item>

</layer-list>